### Copy this file to .env and fill values before running the server
PORT=3000

# Optional: bind host/IP for the server. Default is 127.0.0.1 (localhost).
# Set to 0.0.0.0 to listen on all interfaces (makes site available on your LAN)
# or set to your machine IP (e.g. 192.168.1.42) to bind to a specific address.
BIND_HOST=127.0.0.1

# SMTP settings (example for Gmail SMTP with App Password)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@example.com
SMTP_PASS=your-smtp-password-or-app-password

# From address shown in emails
FROM_EMAIL="OrA Tech Studio <no-reply@oratechstudio.com>"

# Where incoming site messages should go (your email)
TO_EMAIL=orarni68@gmail.com
